{
  "name": "vulfram-core",
  "version": "0.0.1",
  "main": "index.node",
  "types": "index.d.ts",
  "scripts": {
    "check": "cd core && cargo check",
    "fmt": "cd core && cargo fmt",
    "build:ffi": "cd core && cargo build --release --features ffi --no-default-features",
    "build:napi": "cd core && cargo build --release",
    "build:lua": "cd core && cargo build --release --features lua --no-default-features",
    "build:python": "cd core && cargo build --release --features python --no-default-features",
    "debug:ffi": "cd core && cargo build --features ffi --no-default-features",
    "debug:napi": "cd core && cargo build",
    "debug:lua": "cd core && cargo build --features lua --no-default-features",
    "debug:python": "cd core && cargo build --features python --no-default-features"
  },
  "devDependencies": {
    "@types/bun": "^1.3.3"
  }
}
